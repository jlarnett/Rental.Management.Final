@model IEnumerable<Rental.Management.Final.Models.RentalProperty>

@{
    ViewData["Title"] = "Index";
}

<div class="row mt-1 mb-1">
    <div class="col"></div>
    <a asp-action="Create" class="btn btn-success col">Add New Rental</a>
    <div class="col"></div>
</div>

<h1 class="text-warning">Occupied Rentals</h1>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="col-6">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th class="col-1">
                @Html.DisplayNameFor(model => model.IsOccupied)
            </th>
            <th class="col-1">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@{
            @foreach(var item in Model)
            {
                if(item.IsOccupied == true)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td >
                            @Html.DisplayFor(modelItem => item.IsOccupied)
                        </td>
                        <td>
                            @String.Format("{0:C}", item.Price)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
}

        </tbody>
</table>

<h1 class="text-warning">Open Rentals</h1>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th class="col-6">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="col-2">
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th class="col-1">
                @Html.DisplayNameFor(model => model.IsOccupied)
            </th>
            <th class="col-1">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            @foreach (var item in Model)
            {
                if(item.IsOccupied == false)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsOccupied)
                        </td>
                        <td>
                            @String.Format("{0:C}", item.Price)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        }

    </tbody>
</table>

